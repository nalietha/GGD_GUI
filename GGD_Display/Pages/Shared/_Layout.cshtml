<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GGD_Display</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GGD_Display.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="bg-white shadow border-b w-full px-4 py-3 fixed top-0 left-0 z-40">
            <div class="max-w-screen-xl mx-auto flex justify-between items-center">
                <a href="/" class="text-xl font-semibold text-gray-800">GGD_Display</a>

                <div class="space-x-4">
                    <a class="text-gray-700 hover:text-purple-600" asp-area="" asp-page="/Index">Home</a>
                    <a class="text-gray-700 hover:text-purple-600" asp-area="" asp-page="/Profile">Profile</a>
                    <button onclick="openSettingsModal()" class="text-white bg-gray-700 px-3 py-1 rounded hover:bg-gray-600">
                        ⚙️ Settings
                    </button>
                </div>
            </div>
        </nav>
    </header>


    <div class="pt-20">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GGD_Display - <a asp-area="" asp-page="/Privacy">Privacy</a>
            @* <p>Current App Version: @Model.GetAppVersion()</p> *@
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>